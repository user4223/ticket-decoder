{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "setup debug",
      "type": "shell",
      "command": "${workspaceFolder}/setup.sh",
      "args": [
        "Debug"
      ],
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "build debug",
      "type": "shell",
      "args": [
        "Debug"
      ],
      "command": "${workspaceFolder}/build.sh",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "setup release",
      "type": "shell",
      "command": "${workspaceFolder}/setup.sh",
      "args": [
        "Release"
      ],
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "build release",
      "type": "shell",
      "args": [
        "Release"
      ],
      "command": "${workspaceFolder}/build.sh",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build"
      }
    }
  ]
}